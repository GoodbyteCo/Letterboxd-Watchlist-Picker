<style>
	a 
	{
		--slot-machine-width: 25px;

		display: flex;
		flex-direction: row;

		text-decoration: none;
		overflow: hidden;
		width: calc((var(--slot-machine-width) * 3));
		height: calc(var(--slot-machine-width) + 2px);
		margin: auto;

		padding: 0 2px;
		box-sizing: border-box;
		border: 2px solid var(--secondary);
		border-radius: 4px;
		
		/* in the default state (not yet loaded), the logo enlarges.
		 * todo: make default?
		 */
		transform: scale(1.5) translateY(15px);
		transition:
			border ease-in-out 0.25s, /* darkmode transition */
			transform 1.2s cubic-bezier(0.82, 0.01, 0.45, 1); /* loading transition */
	}

	:global(body.loading) svg 
	{
		animation: spin 0.2s linear infinite;
	}

	:global(body.loaded) a
	{
		/* shrink back down once done */
		transform: none;
	}

	svg 
	{
		--full-height: 100px;
		--distance-to-letterboxd-dot: -9.4px;

		width: calc(var(--slot-machine-width));
		height: var(--full-height);
		transform: translateY(var(--distance-to-letterboxd-dot)) scale(1.4);
		animation: finish 0.8s cubic-bezier(0, 0.7, 0.39, 1.35);
	}

	/* offset each spinner */
	svg:nth-of-type(1) { animation-delay: 50ms !important }
	svg:nth-of-type(2) { animation-delay: 0ms !important }
	svg:nth-of-type(3) { animation-delay: 100ms !important }

	@keyframes spin 
	{
		0% { transform: translateY(calc(var(--full-height) * -1)) scale(1.4) }
		100% { transform: translateY(0px) scale(1.4) }
	}

	@keyframes finish 
	{
		0% { transform: translateY(calc(var(--full-height) * -1)) scale(1.4) }
		100% { transform: translateY(var(--distance-to-letterboxd-dot)) scale(1.4) }
	}
</style>
